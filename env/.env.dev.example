# =============================================================================
# dashtam-jobs Development Environment Configuration
# =============================================================================
# Copy to .env.dev and customize for your local setup:
#   cp env/.env.dev.example env/.env.dev

# Redis Configuration (jobs-specific instance)
JOBS_REDIS_PORT=6381
REDIS_URL=redis://redis:6379/0

# Database Configuration (connects to dashtam-api's database)
DATABASE_URL=postgresql+asyncpg://dashtam_user:secure_password_change_me@dashtam-dev-postgres:5432/dashtam

# Job Result Configuration
JOB_RESULT_TTL=86400

# Worker Configuration
WORKER_CONCURRENCY=10

# Logging Configuration
LOG_LEVEL=DEBUG

# Token Expiry Check Configuration
TOKEN_EXPIRY_THRESHOLD_HOURS=24
TOKEN_CHECK_CRON=*/15 * * * *
